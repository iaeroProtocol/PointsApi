{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "iaero-postgres",
      "type": "postgres"
    },
    {
      "name": "iaero-points-api",
      "source": "/apps/points-api",
      "healthcheckPath": "/health",
      "port": 8080,
      "env": {
        "DATABASE_URL": { "fromService": "iaero-postgres", "env": "DATABASE_URL" },
        "PORT": "8080"
      }
    },
    {
      "name": "iaero-points-indexer",
      "source": "/apps/points-indexer",
      "healthcheckPath": "/health",
      "port": 8090,
      "env": {
        "DATABASE_URL": { "fromService": "iaero-postgres", "env": "DATABASE_URL" },
        "RPC_URL": "",
        "TARGETS": "",
        "CONFIRMATIONS": "3",
        "STEP": "2000",
        "POLL_MS": "6000",
        "HEALTH_PORT": "8090"
      }
    }
  ]
}
